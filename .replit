modules = ["python-3.11", "java"]

[nix]
channel = "stable-24_05"
packages = ["maven", "zip"]

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "java -jar target/quizmaster.jar --server.port=7090 --server.address=0.0.0.0"]
build = ["sh", "-c", "mvn clean install package -DskipTests"]

[workflows]
runButton = "Quiz Master Application"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Quiz Master Application"

[[workflows.workflow]]
name = "Quiz Master Application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn spring-boot:run"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 8501
externalPort = 3001

[[ports]]
localPort = 35729
externalPort = 3000
