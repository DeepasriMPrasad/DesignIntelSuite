modules = ["python-3.11", "java", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["maven", "jdk"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "java -jar target/quizmaster.jar"]
build = ["sh", "-c", "mvn clean install package -DskipTests"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Interface"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Direct"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Access"

[[workflows.workflow]]
name = "Streamlit Interface"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5001"
waitForPort = 5001

[[workflows.workflow]]
name = "Spring Boot Application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "java -jar target/quizmaster.jar"
waitForPort = 5000

[[workflows.workflow]]
name = "Quiz Master"
author = 5674785
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn spring-boot:run -Dspring-boot.run.arguments=\"--server.port=7090\""

[[workflows.workflow]]
name = "Spring Boot App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn spring-boot:run -DskipTests"
waitForPort = 5000

[[workflows.workflow]]
name = "Spring Boot Direct"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn spring-boot:run -DskipTests"
waitForPort = 5000

[[workflows.workflow]]
name = "Web Access"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Configuring web access to port 5000\""
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 7090
externalPort = 3001

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 39713
externalPort = 3000
