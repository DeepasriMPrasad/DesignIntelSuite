modules = ["python-3.11", "java"]

[nix]
channel = "stable-24_05"
packages = ["maven"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "bash deploy.sh"]
build = ["sh", "-c", "mvn clean install package -DskipTests"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Interface"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Application"

[[workflows.workflow]]
name = "Streamlit Interface"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5001"
waitForPort = 5001

[[workflows.workflow]]
name = "Spring Boot Application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn spring-boot:run"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 7090
externalPort = 3001

[[ports]]
localPort = 8000
externalPort = 80
